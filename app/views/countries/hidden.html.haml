-# frozen_string_literal: true
.row
  .col
    %h1.left= "Hidden Countries"
  .col.text-right
    - if @show_visible
      = link_to 'Show visible', countries_path, class: 'btn btn-outline-dark'

.row
  .col
    %h5 Hidden places don't appear on reports or in select fields. Edit a place to make it visible.

.row
  %table.table.table-striped
    %thead.thead-dark
      %tr
        %th Name
        %th
    %tbody
      -@countries.each do |country|
        %tr
          %td= link_to country.name, country_path(country)
          %td= link_to 'Make Visible', make_visible_country_path(country), class: 'btn empty'
