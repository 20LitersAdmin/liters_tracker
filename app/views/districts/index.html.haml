-# frozen_string_literal: true
.row.mb-3
  .col-sm-8
    %h1 Districts
  .col-sm-2.text-right
    - if @show_hidden
      = link_to 'Show hidden', hidden_districts_path, class: 'btn btn-outline-dark small'
  .col-sm-2.text-right
    = link_to 'New', new_district_path, class: 'btn yellow small'
    = link_to 'Back', @return_path, class: 'btn blue small'

= render partial: 'shared/search', locals: { from: @from, to: @to, earliest: @earliest, latest: @latest }

%table.table.table-striped.table-sm#dttb-districts
  %thead
    %tr
      %th District
      %th.text-right People served
      %th.text-right People goal
  %tbody
    = render @districts
