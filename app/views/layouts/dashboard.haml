!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type' }
    %title Track [20 Liters]
    / Google Tag Manager
    :javascript
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-5HMCMHD');
    / end Google Tag Manager
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://20liters.kindful.com/embeds/743a7d01-5726-491f-aaf2-fbbc15da826a/init.js', 'data-embed-id': '743a7d01-5726-491f-aaf2-fbbc15da826a', 'data-lookup-type': 'jquery-selector', 'data-lookup-value': '#kindful_plugin', 'data-styles-off': true
    = render 'shared/icons'
    -# bloomerang can track website visits by constituents
    %script{ src: 'https://api.bloomerang.co/v1/WebsiteVisit?ApiKey=pub_95ca45e0-35fa-11ed-9883-0276bb62884d', type: 'text/javascript' }
  %body.liters-tracker{ 'data-controller': 'dashboard', 'data-action': 'index', 'data-site': '20liters-track' }
    / Google Tag Manager (noscript)
    %noscript
      %iframe{ src: 'https://www.googletagmanager.com/ns.html?id=GTM-5HMCMHD', height: 0, width: 0, style: 'display:none;visibility:hidden;' }
    / end Google Tag Manager (noscript)
    = render 'dashboard/header', locals: { title: @title, subtitle: @subtitle }
    %main
      = yield
    %footer.footer
      = render 'dashboard/footer'
