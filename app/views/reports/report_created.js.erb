// for sectors#report:_village_form
// clear out the form fields
$('input.form-control').val('')
$('select.form-control.optional').val('')
// destroy the existing DataTable
$("table#dttb_sector_reports").DataTable().destroy();
// re-populate the table body using the partial
$("table#dttb_sector_reports tbody").html("<%= j render partial: 'sectors/report', collection: @reports, locals: { scale: @report.technology.scale } %>");
// re-init the DataTable
$("table#dttb_sector_reports").DataTable({
  order: [[ 0, 'asc' ], [ 1, 'asc' ]]
});
// fake the flash[:success]
$('main.container').prepend('<div class="alert alert-success alert-dismissable fade show" role="alert"><button class="close" data-dismiss="alert">x</button>Report was successfully created.</div>')
// navigate to the top of the page so you can see the flash message
window.scrollTo(0, 0);
