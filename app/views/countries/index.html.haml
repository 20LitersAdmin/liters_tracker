-# frozen_string_literal: true
.row.mb-3
  .col-sm-8
    %h1 Countries
  .col-sm-2.text-right
    - if @show_hidden
      = link_to 'Show hidden', hidden_countries_path, class: 'btn btn-outline-dark small'
  .col-sm-2.text-right
    = link_to 'New', new_district_path, class: 'btn yellow small'
    = link_to 'Back', @return_path, class: 'btn blue small'

= render partial: 'shared/search', locals: { from: @from, to: @to, earliest: @earliest, latest: @latest }

.row
  %table.table.table-striped
    %thead.thead-dark
      %tr
        %th Country
        %th.text-right People served
        %th.text-right People goal
    %tbody
      = render @countries
