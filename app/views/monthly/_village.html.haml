-# frozen_string_literal: true

- village_report = village.related_reports.where(technology: technology, date: @date).last
- story = village_report.story
- #facilities = village_report.related_facilities

%tr
  %td{colspan: 3}
  %td= "#{village.name}"
  %td.text-right= human_number village_report.distributed
  %td.text-right= human_number village_report.checked
  %td.text-right= human_number village_report.impact
  %td.text-right
    - if story.nil?
      =link_to 'Add', new_story_path(year: params[:year], month: params[:month], report_id: village_report.id), class: 'btn yellow'
    - else
      =link_to 'Edit', edit_story_path(story.id, year: params[:year], month: params[:month]), class: 'btn blue'
