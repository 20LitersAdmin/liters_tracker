-# frozen_string_literal: true
.row
  .col-10
    %h1 Submit a report
  .col-2
    = link_to 'Back', root_path, class: 'btn btn-outline-secondary'

.row
  .col-12
    %h3 Select a technology and sector:
  .col-12
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th District
          - @technologies.size.times do
            %th


      %tbody
        - @sectors.each do |sector|
          %tr
            %td= sector.name
            %td= sector.district.name
            - @technologies.each do |tech|
              %td= link_to tech.short_name, report_sector_path(sector, tech: tech.id), class: 'btn btn-primary '
