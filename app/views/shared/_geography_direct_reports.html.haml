- reports = geography.reports.between(@from, @to)
.row.mt-3
  .col-11
    %h4= "Reports on #{geography.name} #{geography.class}:"
  .col-1
    = link_to 'Hide', '#', class: 'btn blue global-toggle-btn', id: 'hide_report_section'
    = link_to 'Show', '#', class: 'btn blue global-toggle-btn start-hidden', id: 'show_report_section'
.row.mb-5#report_section
  .col-12
    %table.table.table-striped
      %thead
        %tr
          %th Date
          %th Technology
          %th Distributed
          %th Checked
          %th Ppl
          %th Hrs
          %th Impact
          %th Author
          %th

      %tbody
        - reports.each do |report|
        - geo = report.reportable
          %tr
            %td= report.date
            %td= report.technology.short_name
            %td= human_number report.distributed
            %td= human_number report.checked
            %td= human_number report.people
            %td= human_number report.hours
            %td= human_number report.impact
            %td= report.user.fname
            %td= link_to 'Edit', edit_report_path(report), class: 'btn yellow small', target: '_blank'
