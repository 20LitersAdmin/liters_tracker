-# frozen_string_literal: true
%div.container
  %h1.left Listing Countries

%div.row
  %table.table.table-striped.table-hover.table-sm.table-responsive-sm
    %thead.thead-dark
      %tr
        %th Name
        %th Gis code
        %th Population
        %th Households
        %th
    %tbody
      -@countries.each do |country|
        %tr
          %td= link_to country.name, country_path(country)
          %td= country.gis_code
          %td= country.population
          %td= country.households
          %td= link_to 'Edit', edit_country_path(country), class: 'btn yellow small'

  %div.row
    = link_to 'New Country', new_country_path
