-# frozen_string_literal: true
= simple_form_for report, remote: true do |f|
  = f.input :reportable_id, as: :hidden
  = f.input :reportable_type, as: :hidden
  = f.input :technology_id, as: :hidden, input_html: { value: @technology.id }
  = f.input :date, as: :hidden, input_html: { value: @date }
  .row
    .col-6.col-md-2.field
      = f.input :cell, collection: @cell_select, hint: 'Select to limit villages.'
    .col-6.col-md-3.field
      = f.input :village, collection: [['Please select a cell','0']], disabled: 0
    .col-3.col-md-2.field
      = f.input :distributed
    .col-3.col-md-2.field
      = f.input :people
    .col-3.col-md-2.field
      = f.input :checked
    .col-3.col-md-1.field
      = f.button :submit, 'Save', class: 'btn yellow skinny btn-match-field-height', id: 'village_submit_report'
