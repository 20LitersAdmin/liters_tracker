-# frozen_string_literal: true
= form_for @district do |f|
  - if @district.errors.any?
    = render partial: 'shared/form_errors', locals: { object: @district }

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :gis_code
    = f.number_field :gis_code
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :population
    = f.number_field :population
  .field
    = f.label :households
    = f.number_field :households
  .actions
    = f.submit 'Save'
