-# frozen_string_literal: true
- site = family_plan.planable
%tr
  %td= site.name
  %td= site.class.to_s
  %td= format_hierarchy site.hierarchy, slim: true
  %td.text-center= human_number site.population
  %td.text-center= human_number family_plan.goal
  %td.text-center= human_number family_plan.people_goal
  %td.text-center= human_date family_plan.date
  %td= link_to 'Edit', edit_report_path(family_plan), class: 'btn yellow small'
  %td= link_to 'Delete', contract_plan_path(@contract, family_plan), method: :delete, class: 'btn red small contract-plan-delete', remote: true, data: { confirm: 'Are you sure you want to DELETE the plan?' }
