%tr
  %td= engagement_report.reportable.cell&.name
  %td= engagement_report.reportable.village&.name
  %td.text-center= engagement_report.plan&.goal
  %td.text-center= human_number engagement_report.people
  %td.text-center= human_number engagement_report.hours
  %td.text-center= human_number engagement_report.impact
  %td= link_to 'Edit', edit_report_path(engagement_report), class: 'btn yellow small', target: '_blank'
  %td= link_to 'Delete', engagement_report, method: :delete, class: 'btn red small sector-report-delete', remote: true, data: { confirm: 'Are you sure you want to DELETE the report?' }
