-# frozen_string_literal: true
.row
  .col
    %h1.left= "Visible Countries"
  .col.text-right
    - if @show_hidden
      = link_to 'Show hidden', hidden_countries_path, class: 'btn btn-outline-dark'

.row
  %table.table.table-striped
    %thead.thead-dark
      %tr
        %th Name
        %th Gis code
        %th Population
        %th Households
        %th
    %tbody
      -@countries.each do |country|
        %tr
          %td= link_to country.name, country_path(country)
          %td= country.gis_code
          %td= country.population
          %td= country.households
          %td= link_to 'Edit', edit_country_path(country), class: 'btn yellow small'

  .row
    = link_to 'New Country', new_country_path, class: 'btn yellow'
